<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="12dp">

    <RadioButton
        android:id="@+id/radio_select_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_close_address"
                android:text="Trần Hùng Danh"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_edit_address"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit_address" />

            <ImageView
                android:id="@+id/img_close_address"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/img_edit_address"
                android:src="@drawable/ic_close_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_phone_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="0329254554" />

        <TextView
            android:id="@+id/txt_address_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="29/1A1 đường 36, phường Hiệp Bình Chánh, quận Thủ Đức" />
    </LinearLayout>
</LinearLayout>