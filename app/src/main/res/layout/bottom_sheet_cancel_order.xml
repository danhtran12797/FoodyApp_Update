<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_close_bottom_sheet"
            android:gravity="center"
            android:text="Chọn Lý Do Hủy"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/img_close_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#41FFFD9C"
            android:drawableLeft="@android:drawable/stat_sys_warning"
            android:drawablePadding="12dp"
            android:drawableTint="#FFC107"
            android:padding="12dp"
            android:textSize="14sp"
            android:text="Vui lòng chọn lý do hủy. Với lý do này bạn sẽ hủy tất cả sản phẩm trong đơn hàng và không thể thay đổi sau đó."
            android:textColor="#FFC107" />
    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radio_group_cancle_order"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <RadioButton
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:text="Muốn thay đổi địa chỉ giao hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:text="Thủ tục thanh toán quá rắc rối"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:text="Tìm thấy giá rẻ hơn ở chỗ khác"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_button4"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:text="Thích thì hủy không thích thì hủy &#128526;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:paddingLeft="10dp"
            android:text="Khác"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btn_cancle_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/selector_button"
            android:text="Đồng ý"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>